@model VrstaUloge

@{
    ViewBag.Title = "Ažuriranje vrste uloge";
}

<div class="container mt-5">

    <h2>Ažuriranje vrste uloge</h2>

    <form asp-route-id="@Model.Id"
          asp-route-page="@ViewBag.Page"
          asp-route-sort="@ViewBag.Sort"
          asp-route-ascending="@ViewBag.Ascending"
          method="post">
        <div asp-validation-summary="All"></div>
        <div class="mt-3 text-start">
            <label asp-for="Vrsta" class="form-label">Naziv vrste uloge</label>
            <input asp-for="Vrsta" class="form-control"/>
            <div class="form-text">
                <span asp-validation-for="Vrsta" class="text-danger"></span>
            </div>
        </div>
        <input type="hidden" asp-for="Id"/>
        <div class="mt-3 text-center">
            <button class="btn btn-primary" type="submit">Ažuriraj</button>
            <a asp-action="Index"
               asp-route-page="@ViewBag.Page"
               asp-route-sort="@ViewBag.Sort"
               asp-route-ascending="@ViewBag.Ascending"
               class="btn btn-secondary">
                Odustani
            </a>
        </div>
    </form>
</div>

@section scripts {
    <partial name="IncludeValidation"/>
}