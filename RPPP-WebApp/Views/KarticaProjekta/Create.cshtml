@model KarticaProjekta


@{
    ViewData["Title"] = "Unos kartice projekta";
}

<h1>Create</h1>

@{
    var errorMessage = TempData["ErrorMessage"] as string;
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">
        @errorMessage
    </div>
}

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ProjektId" class="control-label"></label>
        <select asp-for="ProjektId" class="form-control" asp-items="@(ViewBag.Projekti as SelectList)">
            <option value="">-- Select Projekt --</option>
        </select>
        <span asp-validation-for="ProjektId" class="text-danger"></span>
    </div>


    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("IncludeValidation");}
}