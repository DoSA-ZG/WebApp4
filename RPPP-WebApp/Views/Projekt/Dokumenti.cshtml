@model IEnumerable<DokumentViewModel>

<table class="table table-striped w-100 w-auto" id="table-dokumentis">
    <thead>
        <tr>
            @{
                string[] nazivi = { "Naziv dokumenta", "Vrsta dokumenta", "Status dokumenta", "Ekstenzija dokumenta", "Vrijeme prijenosa", "Posljednja izmjena", "Datoteka"};
                for (int i = 0; i < nazivi.Length; i++)
                {
                    <th class="text-left">
                        @nazivi[i]
                    </th>
                }
            }
            <th></th>
        </tr>
    </thead>
    <tbody id="documentSection">
        @foreach (var dokument in Model)
        {
            <tr>
                <td class="text-left">
                    <input type="hidden" name="Dokumenti.Index" value="@dokument.Id" />
                    <input type="hidden" name="Dokumenti[@dokument.Id].Id" value="@dokument.Id" />
                    <input name="Dokumenti[@dokument.Id].NazivDok" value="@dokument.NazivDok" class="form-control" />
                </td>
                <td>
                    <select class="form-select" name="Dokumenti[@dokument.Id].VrstaDokumentaId" asp-for="@dokument.VrstaDokumentaId" asp-items="ViewBag.VrsteDok">
                        <option value="">@dokument.VrstaDokumenta</option>
                    </select>
                </td>
                <td>
                    <select class="form-select" name="Dokumenti[@dokument.Id].StatusDokumentaId" asp-for="@dokument.StatusDokumentaId" asp-items="ViewBag.Statusi">
                        <option value="">@dokument.StatusDokumenta</option>
                    </select>
                </td>
                <td class="text-left">
                    <input name="Dokumenti[@dokument.Id].EkstenzijaDokumenta" class="form-control" value="@dokument.EkstenzijaDokumenta" />
                </td>
                <td class="text-left">
                    <input name="Dokumenti[@dokument.Id].VrPrijenos" class="form-control" value="@dokument.VrPrijenos" />
                </td>
                <td class="text-left">
                    <input name="Dokumenti[@dokument.Id].DatumZadIzmj" class="form-control" value="@dokument.DatumZadIzmj" />
                </td>
                <td class="text-left">
                    <input type="file" name="Dokumenti[@dokument.Id].DatotekaFile" class="form-control" id="formFileLg" />
                </td>
                <td>
                    <button class="btn btn-sm btn-danger deleterow" title="Izbaci"><i class="fa fa-minus"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-sm btn-success" title="Dodaj dokument" onclick="addDocumentEdit(event)"><i class="fas fa-plus"></i></button>
