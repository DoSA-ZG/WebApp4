@model KorisnickiRacun

@{
    ViewBag.Title = "Dodavanje novog korisničkog računa";
}

<div class="container mt-5">

    <h2>Dodavanje novog korisničkog računa</h2>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="All"></div>
        <div class="mt-3 text-start">
            <label asp-for="StupanjPrava" class="form-label">Stupanj prava</label>
            <input type="number" asp-for="StupanjPrava" class="form-control"/>
            <div class="form-text">
                <span asp-validation-for="StupanjPrava" class="text-danger"></span>
            </div>
        </div>
        @* <input type="hidden" asp-for="Id"/> *@
        <div class="mt-3 text-center">
            <button class="btn btn-success" type="submit">Potvrdi</button>
            <a asp-action="Index"
               asp-route-page="@ViewBag.Page"
               asp-route-sort="@ViewBag.Sort"
               asp-route-ascending="@ViewBag.Ascending"
               class="btn btn-secondary">
                Odustani
            </a>
        </div>
    </form>
</div>

@section scripts {
    <partial name="IncludeValidation"/>
}