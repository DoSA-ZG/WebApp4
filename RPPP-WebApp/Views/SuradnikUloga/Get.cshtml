@model RPPP_WebApp.ViewModels.SuradnikUlogaViewModel

<tr hx-target="this" hx-swap="outerHTML">
    <td class="text-left">@Model.DatumPocetak.Date</td>
    <td class="text-left">@Model.DatumKraj.Date</td>
    <td class="text-left">@Model.Projekt.NazivProjekt</td>
    <td class="text-left">@Model.Suradnik.Ime @Model.Suradnik.Prezime</td>
    <td class="text-left">@Model.VrstaUloge.Vrsta</td>
    <td>
        <a asp-action="Edit"
           asp-route-id="@Model.Id"
           asp-route-page="@ViewBag.PagingInfo.CurrentPage"
           asp-route-sort="@ViewBag.PagingInfo.Sort"
           asp-route-ascending="@ViewBag.PagingInfo.Ascending"
           class="btn btn-secondary btn-sm" title="Ažuriraj"><i class="fas fa-edit"></i></a>
    </td>
    <td>
        <button class="btn btn-sm btn-danger"
                hx-confirm="Obrisati ulogu suradnika na projektu?"
                hx-delete="@Url.Action(nameof(SuradnikUlogaController.Delete), new { id = Model.Id })"
                title="Obriši">
            <i class="fas fa-trash-alt"></i>
        </button>
    </td>
</tr>