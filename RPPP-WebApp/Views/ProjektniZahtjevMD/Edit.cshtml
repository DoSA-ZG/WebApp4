@model RPPP_WebApp.ViewModels.ProjektniZahtjevViewModel
@{
    ViewBag.Title = "Izmjena projektnog zahtjeva";
}

<div class="container">
    <form id="prZahtjev_form" method="post" asp-action="Edit"
          asp-route-page="@ViewBag.Page"
          asp-route-sort="@ViewBag.Sort"
          asp-route-ascending="@ViewBag.Ascending"
          asp-route-filter="@ViewBag.Filter">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="All" class="form-group row"></div>

        <div class="form-group row">
            <label asp-for="NazivZahtjeva" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-1">
                <input asp-for="NazivZahtjeva" class="form-control" />
            </div>
            <label asp-for="OpisZahtjeva" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="OpisZahtjeva" class="form-control" />
            </div>
            <label asp-for="PrioritetZahtjeva" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-3">
                <input class="form-control" data-autocomplete="prioritet" asp-for="@Model.PrioritetZahtjeva" />
            </div>
            <label asp-for="VrstaZahtjeva" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-3">
                <input class="form-control" data-autocomplete="vrsta" asp-for="@Model.VrstaZahtjeva" />
            </div>
            <label asp-for="Projekt" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-3">
                <input class="form-control" data-autocomplete="projekt" asp-for="@Model.Projekt" />
            </div>
            <div class="col-sm-2">
                <button id="save" type="submit" class="btn btn-sm btn-primary save" title="Spremi"><i class="fas fa-save"></i></button>
                <a class="btn btn-sm btn-primary cancel"
                   asp-action="Edit"
                   asp-route-id="@Model.Id"
                   asp-route-page="@ViewBag.Page"
                   asp-route-sort="@ViewBag.Sort"
                   asp-route-ascending="@ViewBag.Ascending"
                   asp-route-filter="@ViewBag.Filter"
                   title="Osvježi">
                    <i class="fas fa-sync-alt"></i>
                </a>
                <a class="btn btn-sm btn-primary cancel"
                   asp-action="Index"
                   asp-route-page="@ViewBag.Page"
                   asp-route-sort="@ViewBag.Sort"
                   asp-route-ascending="@ViewBag.Ascending"
                   asp-route-filter="@ViewBag.Filter"
                   title="Odustani">
                    <i class="fas fa-undo-alt"></i>
                </a>
            </div>
        </div>        
    </form>
</div>


@section styles {
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}

@section scripts {
    <partial name="IncludeValidation" />
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/js/autocomplete.js" asp-append-version="true"></script>
    <script src="~/js/dokumenti.js" asp-append-version="true"></script>
}

