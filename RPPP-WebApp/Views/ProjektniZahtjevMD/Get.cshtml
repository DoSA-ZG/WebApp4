@model RPPP_WebApp.ViewModels.ProjektniZahtjevViewModel

<tr hx-target="this" hx-swap="outerHTML">
    <td class="text-left">@Model.NazivZahtjeva</td>
    <td class="text-left">@Model.OpisZahtjeva</td>
    <td class="text-left">@Model.PrioritetZahtjeva</td>
    <td class="text-left">@Model.VrstaZahtjeva</td>
    <td class="text-left">@Model.Projekt</td>
    <td>
        <a class="btn btn-sm edit"
           hx-get="@Url.Action(nameof(RPPP_WebApp.Controllers.ProjektniZahtjevMDController.Edit), new { id = Model.Id })"
           title="Ažuriraj"><i class="fas fa-edit"></i></a>
    </td>
    <td>
        <button class="btn btn-sm btn-danger"
                hx-confirm="Obrisati projektni zahtjev?"
                hx-delete="@Url.Action(nameof(RPPP_WebApp.Controllers.ProjektniZahtjevMDController.Delete), new { id = Model.Id })"
                title="Obriši">
            <i class="fas fa-trash-alt"></i>
        </button>
    </td>
</tr>